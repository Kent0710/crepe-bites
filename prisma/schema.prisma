generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  sessions Session[]
  username String    @unique
  password String
  order    Order[]

  codePoints Int

  inbox Message[]
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  date    DateTime
  content String

  userId String @db.ObjectId
  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  userId    String   @db.ObjectId
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Order {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  claimTime     DateTime
  message       String
  useCodePoints Boolean

  orderNumber Int @unique
  section String

  userId String @db.ObjectId
  user   User   @relation(references: [id], fields: [userId], onDelete: Cascade)
}
